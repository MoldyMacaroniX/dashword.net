    <script>
    // Scroll top button var
    var scrollTopButton = document.getElementById("scrollTop");

    // Scroll top amount var
    var scrollTopAmmount = 150;

    // Show Button
    window.onscroll = function() {scrollFunction()};

    function scrollFunction() {
        if (document.body.scrollTop > scrollTopAmmount || document.documentElement.scrollTop > scrollTopAmmount) {
            scrollTopButton.style.transform = "translateX(0%)";
        } else {
            scrollTopButton.style.transform = "translateX(200%)";
        }
    }

    // Scroll to top of page button
    function up() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
    </script>

    <!-- Copy text to clipboard -->
    <script>
    // https://stackoverflow.com/a/48542290
    function copy(text) {
        var dummy = document.createElement("textarea");
        document.body.appendChild(dummy);
        dummy.value = text;
        dummy.select();
        document.execCommand("copy");
        document.body.removeChild(dummy);
        toast("Copied text to clipboard.");
    }
    </script>

